@model IEnumerable<Thesoccerleague.Models.Player>

@{
    ViewData["Title"] = "Players";
}

<h1>Soccer players</h1>

<p>
    <a asp-action="Create">Add</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlayerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerDateOfBorn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerLogo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerDateOfBorn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerLogo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team.TeamName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlayerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlayerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlayerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
