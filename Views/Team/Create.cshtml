@model Thesoccerleague.Models.Team

@{
    ViewData["Title"] = "Creating a new soccer team";
}

<h1>Creating new soccer teams</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamName" class="control-label"></label>
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamFounded" class="control-label"></label>
                <input asp-for="TeamFounded" class="form-control" />
                <span asp-validation-for="TeamFounded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamLogo" class="control-label"></label>
                <input asp-for="TeamLogo" class="form-control" />
                <span asp-validation-for="TeamLogo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeagueId" class="control-label"></label>
                <select asp-for="LeagueId" class ="form-control" asp-items="ViewBag.LeagueId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
