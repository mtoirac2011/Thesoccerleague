@model Thesoccerleague.Models.League

@{
    ViewData["Title"] = "Creating new soccer league";
}

<h1>Creating a new soccer league</h1>

<h4>Leagues</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LeagueName" class="control-label"></label>
                <input asp-for="LeagueName" class="form-control" />
                <span asp-validation-for="LeagueName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeagueCountry" class="control-label"></label>
                <input asp-for="LeagueCountry" class="form-control" />
                <span asp-validation-for="LeagueCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeagueLogo" class="control-label"></label>
                <input asp-for="LeagueLogo" class="form-control" />
                <span asp-validation-for="LeagueLogo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
